$("#modal_change_status").html("<%= j (render partial: 'shared/modal', locals:{ size: 'lg', content: 'enable_person' } ) %>")

setInputDate('#ticket-change-status #date')

$("#modal").modal('show')

$("#form-enable-person").on("ajax:success", function(event) {
    inactive_people_table.ajax.reload(null,false)
    let msg = JSON.parse(event.detail[2].response)
    noty_alert(msg.status, msg.msg)
    $("#modal").modal('hide')
  }).on("ajax:error", function(event) {
	let msg = JSON.parse( event.detail[2].response )
	set_input_status_form('form-enable-person', 'person', msg)
})