<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header g-brd-aqua g-bg-aqua">
      <h5 class="modal-title text-white"><strong><%= @title_modal%></strong></h5>
      <button type="button" class="close text-white" onclick="close_modal('modal_change_status')" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <p>Fecha: <%= date_format @info.date %></p>
      <p>Motivo: <%= @info.description %></p>
    </div>
  </div>
</div>