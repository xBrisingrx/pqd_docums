<h1>Cargas de combustible</h1>

<div class="row ml-1">
  <%= link_to "<i class='fa fa-plus'></i> Registrar camion".html_safe, new_fuel_supplier_path(),
    remote: true, data: { toggle: :modal, target: '#modal' }, 
    class: 'btn u-btn-outline-indigo u-btn-hover-v1-2 mb-2 mr-4' %>

  <%= link_to "Reporte del mes ".html_safe, fuel_reports_path(format: :xlsx ), 
                class: 'btn u-btn-outline-cyan u-btn-hover-v1-2 mb-2 mr-4'%>

  <%= link_to "<i class='fa fa-book'></i> Talonarios".html_safe, ticket_books_path(), remote: true,
    class: 'btn u-btn-outline-pink u-btn-hover-v1-2 mb-2 mr-4' %>
</div>

<%= render( partial: 'shared/table', 
            locals: { table_id: 'fuel_suppliers', 
                      color: 'blue', 
                      icon: 'fa-gear',
                      title: "Camiones de carga de combustible", 
                      col_names: [ 'Nombre', 'Tipo','Carga actual' ,'Descripcion', 'Acciones' ] }) %>


<%= link_to "<i class='fa fa-plus'></i> Carga a vehiculo".html_safe, new_fuel_to_vehicle_path(),
      remote: true,
      class: 'btn u-btn-outline-indigo u-btn-hover-v1-2 mb-2' %>

<%= link_to "<i class='fa fa-book'></i> Generar cierre".html_safe, new_closure_path(),
              remote: true, 
              class: 'btn u-btn-outline-brown u-btn-hover-v1-2 mb-2 ml-4' %>

