<%= form_with(model: @fuel_supplier, id: 'form-fuel-supplier', class: 'needs-validation g-brd-around g-brd-gray-light-v4 g-pa-10 g-mb-10') do |form| %>
  <div class="form-group row">
    <%= form.label :name, 'Nombre: ', class: 'col-form-label col-sm-3 col-md-4' %>
    <div class="col-sm-9 col-md-6">
      <%= form.text_field :name, class: 'form-control', required:true %>
      <small class="invalid-feedback fuel_truk_name"></small>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :supplier_type, 'Tipo: ', class: 'col-form-label col-sm-3 col-md-4' %>
    <select name="fuel_supplier[supplier_type]" id="fuel_supplier_supplier_type" required>
      <option value="">Seleccione el tipo</option>
      <option value="supplier">Abastecedor</option>
      <option value="service_station">Estacion de servicio</option>
    </select>
  </div>

  <div class="form-group row">
    <%= form.label :description, 'DescripciÃ³n:', class: 'col-form-label col-sm-3 col-md-4' %>
    <div class="col-sm-9 col-md-6">
      <%= form.text_area :description, class: 'form-control u-textarea-expandable g-resize-none', rows: 3 %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn u-btn-primary mr-2' %>
    <button type="button" class="btn u-btn-red" data-dismiss="modal">Cerrar</button>
