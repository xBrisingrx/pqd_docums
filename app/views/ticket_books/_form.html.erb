<%= form_with(model: @ticket_book, id: 'ticket-book-form') do |form| %>

  <div class="form-group row">
    <%= form.label :name, 'Nombre: ', class: 'col-form-label col-sm-3 col-md-4' %>
    <div class="col-sm-9 col-md-6">
      <%= form.text_field :name, class: 'form-control', required:true %>
      <small class="invalid-feedback ticket_book_name"></small>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :ticket_from, 'NÂ° de tickets:', class: 'col-form-label col-sm-3 col-md-4' %>
    <div class="col-sm-9 col-md-6 row">
      <div class="col-6">
        <%= form.number_field :ticket_from, class: 'form-control', placeholder: 'Desde el nÂ°', required: true %>
        <small class="invalid-feedback ticket_book_ticket_from ticket_book_tickets"></small>
        <small class="invalid-feedback ticket_book_base"></small>
      </div>
      <div class="col-6">
        <%= form.number_field :ticket_until, class: 'form-control', placeholder: 'Hasta el nÂ°', required: true %>
        <small class="invalid-feedback ticket_book_ticket_until ticket_book_tickets"></small>
        <small class="invalid-feedback ticket_book_base"></small>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn u-btn-primary mr-2' %>
    <button type="button" class="btn u-btn-red" data-dismiss="modal">Cerrar</button>
  </div>

<% end %>
