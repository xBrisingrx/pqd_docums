<%= form_with(model: @person, multipart: true, class: 'g-brd-around g-brd-gray-light-v4 g-pa-10 g-mb-10', id: 'form-person') do |form| %>
  <div class="form-group row g-mb-10">
    <%= form.label :file, 'Nº legajo (*):', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.text_field :file, class: "form-control u-form-control",placeholder: 'Ingrese legajo', required: true  %>
      <small class="form-control-feedback text-danger person_file"></small>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :last_name, 'Apellido (*):', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.text_field :last_name, class: "form-control u-form-control", placeholder: 'Ingrese apellido' ,required: true  %>
      <small class="form-control-feedback text-danger person_last_name"></small>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :name, 'Nombre (*):', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.text_field :name, class: "form-control u-form-control", placeholder: 'Ingrese nombre' ,required: true  %>
      <small class="form-control-feedback text-danger person_name"></small>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :dni, 'DNI (*):', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.text_field :dni, class: "form-control u-form-control", placeholder: 'Ingrese número de DNI'%>
      <small class="form-control-feedback text-danger person_dni"></small>
    </div>
    <div class='col-sm-6'>
      <label class="u-file-attach-v2 g-color-gray-dark-v5 mb-0">
        <%= form.file_field :dni_file %>
        <i class="icon-cloud-upload g-font-size-16 g-pos-rel g-top-2 g-mr-5"></i>
        <span class="js-value">Anexar archivo del DNI</span>
        <small class="form-control-feedback text-danger person_dni_file"></small>
      </label>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :tramit_number, 'N° trámite:', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.number_field :tramit_number, class: "form-control u-form-control", placeholder: 'Ingrese número trámite del dni'  %>
      <small class="form-control-feedback text-danger person_tramit_number"></small>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :cuil, 'Cuil:', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.text_field :cuil, class: "form-control u-form-control", placeholder: 'Ingrese número de Cuil'%>
      <small class="form-control-feedback text-danger person_cuil"></small>
    </div>
    <div class='col-sm-6'>
      <label class="u-file-attach-v2 g-color-gray-dark-v5 mb-0">
        <%= form.file_field :cuil_file %>
        <i class="icon-cloud-upload g-font-size-16 g-pos-rel g-top-2 g-mr-5"></i>
        <span class="js-value">Anexar archivo del cuil</span>
        <small class="form-control-feedback text-danger person_cuil_file"></small>
      </label>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :start_activity, 'Alta temprana:', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.date_field :start_activity, class: "form-control u-form-control"  %>
      <small class="form-control-feedback text-danger person_start_activity"></small>
    </div>
    <div class='col-sm-6'>
      <label class="u-file-attach-v2 g-color-gray-dark-v5 mb-0">
        <%= form.file_field :start_activity_file %>
        <i class="icon-cloud-upload g-font-size-16 g-pos-rel g-top-2 g-mr-5"></i>
        <span class="js-value">Anexar archivo alta temprana</span>
        <small class="form-control-feedback text-danger person_start_activity_file"></small>
      </label>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :birth_date, 'Fecha nacimiento:', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.date_field :birth_date, class: "form-control u-form-control"  %>
      <small class="form-control-feedback text-danger person_birth_date"></small>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :email, 'Email:', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.email_field :email, class: "form-control u-form-control", placeholder: 'Correo electrónico' %>
      <small class="form-control-feedback text-danger person_email"></small>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :nationality, 'Nacionalidad:', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.text_field :nationality, class: "form-control u-form-control", placeholder: 'Nacionalidad'  %>
      <small class="form-control-feedback text-danger person_direction"></small>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :direction, 'Domicilio:', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.text_field :direction, class: "form-control u-form-control", placeholder: 'Domicilio particular'  %>
      <small class="form-control-feedback text-danger person_direction"></small>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :phone, 'Teléfono:', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.text_field :phone, class: "form-control u-form-control", placeholder: 'N° de contacto' %>
      <small class="form-control-feedback text-danger person_phone"></small>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn u-btn-primary g-mr-10' %>
    <button type="button" class="btn u-btn-darkred" data-dismiss="modal">Cerrar</button>
  </div>
<% end %>
