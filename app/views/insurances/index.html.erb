<h1>Aseguradoras</h1>
<%= link_to "<i class='fa fa-plus'></i> Registrar aseguradora".html_safe, new_insurance_path(),remote: true, data: { toggle: :modal, target: '#modal' }, 
  class: 'btn u-btn-outline-indigo u-btn-hover-v1-2 mb-2' %>

<%= render( partial: 'shared/table', 
            locals: { table_id: 'insurances', 
                      color: 'blue', 
                      icon: 'fa-shield',
                      title: "Aseguradoras registradas", 
                      col_names: [ 'Aseguradora', 'Descripcion', 'Acciones' ] }) %>
<!-- Modal para eliminar insurance -->
<div class="modal fade" id="modal-disable-insurance" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Â¿ Esta seguro de dar de baja esta aseguradora ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: disable_insurance_path, id: 'form-disable-insurance') do |form| %>
          <%= form.hidden_field :insurance_id %>
          <%= form.submit 'Eliminar', class: 'btn u-btn-red g-mr-10' %>
          <button type="button" data-dismiss="modal" class="btn u-btn-teal g-mr-10"> Cerrar </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Fin modal eliminar insurance -->