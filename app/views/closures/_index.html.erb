<div class="modal-dialog modal-xl" role="document">
  <div class="modal-content">
    <div class="modal-header g-brd-blue g-bg-blue">
      <h5 class="modal-title text-white"><strong><%= @title_modal%></strong></h5>
      <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= link_to "<i class='fa fa-plus'></i> Generar cierre".html_safe, new_closure_path(),
              remote: true, 
              class: 'btn u-btn-outline-brown u-btn-hover-v1-2 mb-2 ml-4' %>
      <%= render( partial: 'shared/table', 
            locals: { table_id: 'closures', 
                      color: 'blue', 
                      icon: 'fa-book',
                      title: "Talonarios", 
                      col_names: [ 'Periodo','Tickets' ,'Acciones' ] }) %>
    </div>
  </div>
</div>