<%= form_with(model: @closure, id: 'form-closure', class: 'needs-validation g-brd-around g-brd-gray-light-v4 g-pa-10 g-mb-10') do |form| %>
  <div class="form-group row">
    <%= form.label :start_date, 'Desde: ', class: 'col-form-label col-sm-3 col-md-4' %>
    <div class="col-sm-9 col-md-6">
      <%= form.date_field :start_date, class: 'form-control', required:true %>
      <small class="invalid-feedback closure_start_date"></small>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :end_date, 'Hasta: ', class: 'col-form-label col-sm-3 col-md-4' %>
    <div class="col-sm-9 col-md-6">
      <%= form.date_field :end_date, class: 'form-control', required:true %>
      <small class="invalid-feedback closure_end_date"></small>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn u-btn-primary mr-2' %>
    <button type="button" class="btn u-btn-red" data-dismiss="modal">Cerrar</button>
  </div>
<% end %>
