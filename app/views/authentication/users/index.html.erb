<h1>Usuarios</h1>
<%= link_to "<i class='fa fa-plus'></i> Registrar usuario".html_safe, new_user_path(),remote: true, data: { toggle: :modal, target: '#modal' }, 
  class: 'btn u-btn-outline-indigo u-btn-hover-v1-2 mb-2' %>

<%= render( partial: 'shared/table', 
            locals: { table_id: 'users', 
                      color: 'blue', 
                      icon: 'fa-gear',
                      title: "Usuarios registrados", 
                      col_names: [ 'Nombre', 'Correo','Nombre de usuario','Rol','Acciones' ] }) %>

<!-- Modal para eliminar user -->
<div class="modal fade" id="modal-disable-user" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Â¿ Esta seguro de dar de baja esta usuario ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: disable_user_path, id: 'form-disable-user') do |form| %>
          <%= form.hidden_field :user_id %>
          <%= form.submit 'Eliminar', class: 'btn u-btn-red g-mr-10' %>
          <button type="button" data-dismiss="modal" class="btn u-btn-teal g-mr-10"> Cerrar </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Fin modal eliminar user -->