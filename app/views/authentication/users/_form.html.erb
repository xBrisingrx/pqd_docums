<%= form_with(model: @user, id: 'form-user', class: 'needs-validation g-brd-around g-brd-gray-light-v4 g-pa-10 g-mb-10') do |form| %>
  <div class="form-group row">
    <%= form.label :name, 'Nombre (*): ', class: 'col-form-label col-sm-3 col-md-4' %>
    <div class="col-sm-9 col-md-6">
      <%= form.text_field :name, class: 'form-control', required:true %>
      <small class="invalid-feedback user_name"></small>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :email, 'Correo (*):', class: 'col-form-label col-sm-3 col-md-4' %>
    <div class="col-sm-9 col-md-6">
      <%= form.email_field :email, class: 'form-control', required:true %>
      <small class="invalid-feedback user_email"></small>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :username, 'Nombre de usuario (*): ', class: 'col-form-label col-sm-3 col-md-4' %>
    <div class="col-sm-9 col-md-6">
      <%= form.text_field :username, class: 'form-control', required:true %>
      <small class="invalid-feedback user_username"></small>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :password, 'ContraseÃ±a (*):', class: 'col-form-label col-sm-3 col-md-4' %>
    <div class="col-sm-9 col-md-6">
      <%= form.text_field :password, class: 'form-control', required:true%>
      <small class="invalid-feedback user_password"></small>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :rol, 'Rol (*):', class: 'col-form-label col-sm-3 col-md-4' %>
    <div class="col-sm-9 col-md-6">
      <select name="user[rol]" id="user_rol", required class="form-control">
        <option value="admin"> Administrador </option>
        <option value="consulta"> Consulta </option>
      </select>
      <small class="invalid-feedback user_rol"></small>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn u-btn-primary mr-2' %>
    <button type="button" class="btn u-btn-red" data-dismiss="modal">Cerrar</button>
  </div>
<% end %>
