<div class="modal-dialog modal-xl" role="document">
  <div class="modal-content">
    <div class="modal-header g-brd-blue g-bg-blue">
      <h5 class="modal-title text-white"><strong><%= @title_modal%></strong></h5>
      <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= render partial: 'form', locals: { 
                                    form_id: 'form-vehicle-insurance',
                                    vehicle_id: @vehicle.id,
      															vehicle_insurance: @vehicle_insurance
      														} %>

			<%= render( partial: 'shared/table', 
			            locals: { table_id: 'vehicle_insurances', 
			                      color: 'cyan', 
			                      icon: 'fa-shield',
			                      title: "Aseguradoras", 
			                      col_names: [ 'Aseguradora','Poliza','Alta', 'Vencimiento', 'Archivos','Acciones' ] }) %>
			<button type="button" class="btn u-btn-red" data-dismiss="modal">Cerrar</button>
    </div>
  </div>
</div>