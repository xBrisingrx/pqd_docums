<small>Registrar modelo:</small>
<%= form_with(model: @vehicle_model, class: "form-inline mb-2", id: "form-vehicle-model") do |form| %>
  <div class="form-group mr-2">
    <%= form.select(:vehicle_brand_id, @vehicle_brands.collect {|m| [ m.name , m.id]}, { include_blank: true},
                      class: 'form-control select-vehicle-brands', required: true) %>
    <small class="form-control-feedback text-danger vehicle_model_vehicle_brand"></small>
  </div>
  <div class="form-group mr-2">
    <%= form.text_field :name, class: "form-control form-control-sm", placeholder: 'Nombre modelo', required: true %>
    <small class="form-control-feedback text-danger vehicle_model_name"></small>
  </div>
  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn u-btn-primary' %>
  </div>
<% end %>

<div class="card g-brd-purple %> rounded g-mb-30">
  <h3 class="card-header g-bg-purple g-brd-transparent g-color-white g-font-size-16 mb-2 rounded-0">
    <i class="fa fa-car"></i>
    Modelos de vehículos
  </h3>
   <div class="px-2  pb-2">
    <table id="vehicle_models_table" class="table table-sm table-hover dt-responsive w-100 u-table--v1" data-show='show'>
      <thead>
        <tr>
          <th>Modelo</th>
          <th>Marca</th>
          <th>Acciones</th>
        </tr>
      </thead>

      <tbody>
        <!-- Completo con ajax -->
      </tbody>
    </table>
  </div>
</div>

<!-- Modal para eliminar modelo de vehiculo -->
<div class="modal fade" id="modal-disable-vehicle-model" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">¿ Esta seguro de dar de baja esta modelo ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: disable_vehicle_model_path, id: 'form-disable-vehicle-model') do |form| %>
          <%= form.hidden_field :vehicle_model_id %>
          <%= form.submit 'Eliminar', class: 'btn u-btn-red g-mr-10' %>
          <button type="button" class="btn u-btn-teal g-mr-10" onclick="close_modal('modal-disable-vehicle-model')"> Cerrar </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Fin modal eliminar modelo de vehiculo -->