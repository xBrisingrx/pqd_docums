<p id="notice"><%= notice %></p>

<h1>Vehicle Brands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicle_brands.each do |vehicle_brand| %>
      <tr>
        <td><%= vehicle_brand.name %></td>
        <td><%= vehicle_brand.active %></td>
        <td><%= vehicle_brand.description %></td>
        <td><%= link_to 'Show', vehicle_brand %></td>
        <td><%= link_to 'Edit', edit_vehicle_brand_path(vehicle_brand) %></td>
        <td><%= link_to 'Destroy', vehicle_brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

