<small>Registrar marca:</small>
<%= form_with(model: @vehicle_brand, class: "form-inline mb-2", id: "form-vehicle-brand") do |form| %>
  <div class="form-group mr-2">
    <%= form.label :name, 'Nombre: ',class:"col-form-label mr-1" %>
    <%= form.text_field :name, class: "form-control form-control-sm", placeholder: 'Ingrese nombre de marca', required: true %>
    <small class="form-control-feedback text-danger vehicle_brand_name"></small>
  </div>
  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn u-btn-primary' %>
  </div>
<% end %>

<div class="card g-brd-purple %> rounded g-mb-30">
  <h3 class="card-header g-bg-purple g-brd-transparent g-color-white g-font-size-16 mb-2 rounded-0">
    <i class="fa fa-car"></i>
    Marcas de vehículos
  </h3>
   <div class="px-2  pb-2">
    <table id="vehicle_brands_table" class="table table-sm table-hover dt-responsive w-100 u-table--v1" data-show='show'>
      <thead>
        <tr>
          <th>Marca</th>
          <th>Acciones</th>
        </tr>
      </thead>

      <tbody>
        <!-- Completo con ajax -->
      </tbody>
    </table>
  </div>
</div>

<!-- Modal para eliminar marca de vehiculo -->
<div class="modal fade" id="modal-disable-vehicle-brand" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">¿ Esta seguro de dar de baja esta marca ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: disable_vehicle_brand_path, id: 'form-disable-vehicle-brand') do |form| %>
          <%= form.hidden_field :vehicle_brand_id %>
          <%= form.submit 'Eliminar', class: 'btn u-btn-red g-mr-10' %>
          <button type="button" class="btn u-btn-teal g-mr-10" onclick="close_modal('modal-disable-vehicle-brand')"> Cerrar </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Fin modal eliminar marca de vehiculo -->